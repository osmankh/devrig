{
  "id": "linear",
  "name": "Linear",
  "version": "0.1.0",
  "description": "Linear integration â€” sync issues, AI ticket planning, complexity estimation, and project actions",
  "author": { "name": "DevRig", "url": "https://devrig.dev" },
  "auth": { "type": "oauth", "providerId": "linear" },
  "permissions": {
    "network": ["api.linear.app"],
    "secrets": ["linear_api_key"],
    "ai": true
  },
  "preferences": [
    {
      "id": "sync_interval_ms",
      "label": "Sync Interval",
      "type": "select",
      "description": "How often to sync from Linear",
      "default": "300000",
      "options": [
        { "label": "1 minute", "value": "60000" },
        { "label": "5 minutes", "value": "300000" },
        { "label": "15 minutes", "value": "900000" },
        { "label": "1 hour", "value": "3600000" }
      ]
    },
    {
      "id": "auto_plan",
      "label": "Auto-suggest breakdowns",
      "type": "toggle",
      "description": "Automatically suggest ticket breakdowns for new issues",
      "default": false
    },
    {
      "id": "estimate_method",
      "label": "Estimation method",
      "type": "select",
      "description": "Method used for complexity estimation",
      "default": "complexity",
      "options": [
        { "label": "Complexity 1-5", "value": "complexity" },
        { "label": "T-Shirt (XS-XL)", "value": "tshirt" },
        { "label": "Story Points", "value": "story-points" }
      ]
    },
    {
      "id": "sync_completed",
      "label": "Sync completed issues",
      "type": "toggle",
      "description": "Include completed issues in sync",
      "default": false
    }
  ],
  "capabilities": {
    "dataSources": [
      {
        "id": "assigned-issues",
        "name": "Assigned Issues",
        "entryPoint": "src/index.js",
        "syncInterval": 120,
        "description": "Syncs Linear issues assigned to the authenticated user"
      }
    ],
    "actions": [
      {
        "id": "update-status",
        "name": "Update Status",
        "entryPoint": "src/index.js",
        "description": "Update the workflow status of an issue",
        "parameters": {
          "itemId": { "type": "string", "required": true },
          "stateId": { "type": "string", "required": true }
        }
      },
      {
        "id": "assign",
        "name": "Assign Issue",
        "entryPoint": "src/index.js",
        "description": "Assign an issue to a user",
        "parameters": {
          "itemId": { "type": "string", "required": true },
          "assigneeId": { "type": "string", "required": true }
        }
      },
      {
        "id": "comment",
        "name": "Comment",
        "entryPoint": "src/index.js",
        "description": "Post a comment on an issue",
        "parameters": {
          "itemId": { "type": "string", "required": true },
          "body": { "type": "string", "required": true }
        }
      },
      {
        "id": "create-sub-issue",
        "name": "Create Sub-Issue",
        "entryPoint": "src/index.js",
        "description": "Create a sub-issue under a parent issue",
        "parameters": {
          "itemId": { "type": "string", "required": true },
          "title": { "type": "string", "required": true },
          "description": { "type": "string" },
          "teamId": { "type": "string", "required": true }
        }
      },
      {
        "id": "set-priority",
        "name": "Set Priority",
        "entryPoint": "src/index.js",
        "description": "Set priority level (0=none, 1=urgent, 2=high, 3=medium, 4=low)",
        "parameters": {
          "itemId": { "type": "string", "required": true },
          "priority": { "type": "number", "required": true }
        }
      }
    ],
    "aiPipelines": [
      {
        "id": "plan-ticket",
        "name": "Plan Ticket",
        "entryPoint": "src/index.js",
        "trigger": "onAction",
        "description": "Break issue into subtasks and suggest implementation approach"
      },
      {
        "id": "estimate-complexity",
        "name": "Estimate Complexity",
        "entryPoint": "src/index.js",
        "trigger": "onAction",
        "description": "Assign 1-5 complexity estimate with reasoning"
      }
    ]
  }
}
